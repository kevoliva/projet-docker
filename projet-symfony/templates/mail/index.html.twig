{% extends 'base.html.twig' %}

{% block title %}Historique mail{% endblock %}

{% block body %}
    <h1>Historique des mails envoyés</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Destinataire</th>
                <th>Sujet</th>
                <th>Corps</th>
            </tr>
        </thead>
        <tbody>
        {% for mail in mails %}
            <tr>
                <td>{{ mail.id }}</td>
                <td>{{ mail.destinataire }}</td>
                <td>{{ mail.sujet }}</td>
                <td>{{ mail.corps }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mail_new') }}">Créer un nouveau mail</a>
{% endblock %}
